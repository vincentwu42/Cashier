@page
@model Transaction
@{
    ViewData["Title"] = "Transaction";
}

<h2>Transaction</h2>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-center">
                    <h4>Scan Product ID</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label for="Product.ID">Product ID</label>
                            <input asp-for="Product.ID" class="form-control" id="ProductID" placeholder="Enter or Scan Product ID" required />
                            <span asp-validation-for="Product.ID" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Add to Cart</button>
                    </form>
                </div>
            </div>

            @if (Model.transactionDetails != null && Model.transactionDetails.Any())
            {
                <div class="mt-4">
                    <h4>Items in Cart:</h4>
                    <ul class="list-group">
                        @foreach (var item in Model.transactionDetails)
                        {
                            <li class="list-group-item">
                                Product ID: @item.ProductID
                                <span class="float-end">Quantity: @item.Quantity</span>
                            </li>
                        }
                    </ul>
                </div>
            }

            <div class="row w-100">
                <div class="col-6">
                    <div class="text-center mt-3">
                        <form method="post" asp-page-handler="SubmitCart">
                            <button type="submit" class="btn btn-success">Submit Cart</button>
                        </form>
                    </div>
                </div>
                <div class="col-6">
                    <div class="text-center mt-3">
                        <form method="post" asp-page-handler="ClearSession">
                            <button type="submit" class="btn btn-danger">Clear</button>
                        </form>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>