<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="icon" type="image/x-icon" href="~/images/Logo.png" />
    <title>@ViewData["Title"] | Cashier</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/aos/aos.css" />
</head>
<body>
    <div style="min-height:100vh;">
        <header class="position-sticky top-0" style="z-index: 11">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark" aria-label="Offcanvas navbar large">
                <div class="container-fluid">

                    <a class="navbar-brand" asp-area="" asp-page="/Index">
                        <img src="~/images/Logo.png" style="width: 3.2rem; height: auto; object-fit:cover" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                        <div class="offcanvas-header">
                            <a id="offcanvasNavbarLabel" class="offcanvas-title" asp-area="" asp-page="/Index">
                                <img src="~/images/Logo.png" style="width: 8rem; height: auto; object-fit:cover" />
                            </a>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                        </div>
                        <div class="offcanvas-body">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link p-3" asp-area="" asp-page="/Transaction">Transaction</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link p-3" asp-area="" asp-page="/Products">Products</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link p-3" asp-area="" asp-page="/Report">Report</a>
                                </li>
                            </ul>
                            <div class="navbar-collapse d-sm-inline-flex justify-content-end">
                                <div class="p-2">
                                    <a class="btn btn-outline-danger" asp-page="/Account/Login">Login</a>
                                </div>
                                <div class="p-2">
                                    <a class="btn btn-outline-light" asp-page="/Account/Register">Register</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </nav>
        </header>

        <div class="container-fluid p-0">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="footer border-top text-muted p-2" style="text-align:center;">
        <div class="container-fluid">
            Copyright &copy; <span id="currentYear"></span> Cashier. All Rights Reserved.
        </div>
    </footer>

    <script>
        document.getElementById("currentYear").textContent = new Date().getFullYear();
    </script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/aos/aos.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>